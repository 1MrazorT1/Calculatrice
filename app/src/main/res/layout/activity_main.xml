<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button9"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/button8"
        android:backgroundTint="#E6BB8F"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonSlash"
        android:layout_width="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="@color/grey"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/buttonTimes"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/buttonRemove"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        android:backgroundTint="@color/orange"
        android:layout_marginStart="6dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/buttonPoint"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonSign"
        android:backgroundTint="#E6BB8F"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+/-"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonPoint"
        android:layout_width="0dp"
        android:backgroundTint="#E6BB8F"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:text="."
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#E6BB8F"
        android:layout_marginStart="4dp"
        android:text="0"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/buttonSign"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonTimes"
        android:backgroundTint="@color/grey"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="1dp"
        android:text="*"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/buttonMinus"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:backgroundTint="#E6BB8F"
        android:layout_height="0dp"
        android:text="7"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="0dp"
        android:backgroundTint="@color/grey"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:text="-"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlus"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#E6BB8F"
        android:layout_marginBottom="1dp"
        android:text="4"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button6"
        android:backgroundTint="#E6BB8F"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="1dp"
        android:text="6"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#E6BB8F"
        android:layout_marginBottom="1dp"
        android:text="5"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#E6BB8F"
        android:text="1"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/buttonSign"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        android:backgroundTint="#E6BB8F"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:text="3"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        android:backgroundTint="#E6BB8F"
        app:layout_constraintBottom_toTopOf="@+id/buttonPoint"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:text="+"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        android:backgroundTint="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/buttonEqual"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonRemove"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:backgroundTint="@color/grey"
        android:text="âŒ«"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/buttonClear"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="0dp"
        android:backgroundTint="@color/yellow"
        android:layout_height="0dp"
        android:text="C"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/buttonClearInput"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonClearInput"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        android:backgroundTint="@color/yellow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="CE"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button8"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1sp"
        android:gravity="center"
        android:backgroundTint="#E6BB8F"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintWidth_percent="0.25" />


    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:ellipsize="end"
                android:gravity="center"
                android:text=" "
                android:textColor="@color/material_dynamic_primary40"
                android:padding="16dp" />
        </LinearLayout>
    </HorizontalScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>